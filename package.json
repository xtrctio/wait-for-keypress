{
  "name": "@xtrctio/wait-for-keypress",
  "description": "Wait for a given keypress",
  "version": "0.0.1",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/xtrctio/wait-for-keypress/issues"
  },
  "dependencies": {
    "keypress": "^0.2.1"
  },
  "devDependencies": {
    "@xtrctio/eslint-config": "^2.0.6",
    "husky": "^1.3.0",
    "jsdoc": "^3.5.5",
    "jsdoc-to-markdown": "^4.0.1"
  },
  "homepage": "https://github.com/xtrctio/wait-for-keypress#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run docs && git add README.md && LIST=`git diff-index --cached --name-only HEAD | grep '.*\\.js' | grep -v json`; if [ \"$LIST\" ]; then npm run lint && git add $LIST; fi"
    }
  },
  "files": [
    "index.js",
    "README.md",
    "test.js"
  ],
  "keywords": [
    "input",
    "keypress",
    "process",
    "stdin",
    "user",
    "wait"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xtrctio/wait-for-keypress.git"
  },
  "scripts": {
    "docs": "jsdoc2md --template README.template --files \"index.js\" > README.md",
    "lint": "eslint \"**/*.js\" --fix && fixpack",
    "test": "npm run unit && npm run lint",
    "unit": "nyc mocha --use_strict --exit \"tests/**/*.unit.js\""
  }
}
